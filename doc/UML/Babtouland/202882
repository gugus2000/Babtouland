	'icone'       => array('add'),
);


if(verifLiens($Visiteur, $toast_liens['lien']))
{
	$Toast=new \\user\\page\\Toast($toast_liens, $Visiteur->getPage()->getPageElement()->getElement($config['tete_nom']));
